{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
svetp: double;
begin
   if svet.Checked=true then svetp:=(strtofloat(svetnew.Text)-strtofloat(svetold.Text))*strtofloat(svettarif.Text);
   memo1.Lines[1]:=floattostr(svetp);
end;

end.

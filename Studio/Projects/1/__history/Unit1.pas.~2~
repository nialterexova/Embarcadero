unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.FileCtrl;

type
  TForm1 = class(TForm)
    DirectoryListBox1: TDirectoryListBox;
    FileListBox1: TFileListBox;
    DriveComboBox1: TDriveComboBox;
    Button1: TButton;
    Edit1: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Button2: TButton;
    Button3: TButton;
    Button4: TButton;
    Button5: TButton;
    Button6: TButton;
    Button7: TButton;
    Label4: TLabel;
    Edit2: TEdit;
    procedure Button1Click(Sender: TObject);
    procedure DirectoryListBox1Click(Sender: TObject);
    procedure DirectoryListBox1DblClick(Sender: TObject);
    procedure Label2Click(Sender: TObject);
    procedure FileListBox1Click(Sender: TObject);
    procedure Button4Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
name: string;
begin
    name:=Edit1.Text;
    label2.Caption:=extractFileName(DirectoryListBox1.Directory);
    if RenameFile(ExtractFileName(DirectoryListBox1.Directory),Edit1.Text)
    then label4.Caption:='rename success' else label4.Caption:='error';
    DirectoryListBox1.Refresh;
end;

procedure TForm1.Button4Click(Sender: TObject);
var
name: string;
F: file;
begin
name:=Edit2.Text;
AssignFile(F,name);
ReWrite(F);
CloseFile(F);
end;

procedure TForm1.DirectoryListBox1Click(Sender: TObject);
begin
     Label1.Caption:='Адрес папки: '+DirectoryListBox1.Directory;
end;

procedure TForm1.DirectoryListBox1DblClick(Sender: TObject);
begin
        Label1.Caption:='Адрес папки: '+DirectoryListBox1.Directory;
end;

procedure TForm1.FileListBox1Click(Sender: TObject);
begin
Label3.Caption:='Адрес файла: '+FileListBox1.FileName;
end;

procedure TForm1.Label2Click(Sender: TObject);
begin
label2.Caption:=edit1.Name;
end;

end.

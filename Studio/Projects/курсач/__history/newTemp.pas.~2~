{$R *.dfm}

procedure TnewForm.Button1Click(Sender: TObject);
var F: TFileStream;
begin
   if Edit1.Text<>'' then
   begin
   F:=TFileStream.Create('c:\template\'+Edit1.Text+'.txt',fmCreate);
   Close()
   end
   else MessageBox(handle,Pchar('¬ведите название шаблона'),Pchar('Error'), MB_OK);

end;

